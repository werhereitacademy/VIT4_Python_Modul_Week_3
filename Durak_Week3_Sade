tasks = []
deleted_tasks = []

def add_task():
    global tasks
    task_name = input("Please enter the name of the task: ")
    task = {"Name": task_name, "Status": "Pending"}
    tasks.append(task)
    print(f"Task '{task_name}' successfully added. Sequence number: {len(tasks)}")

def complete_task():
    global tasks
    task_index = int(input("Please enter the sequence number of the task to turn its status successful: "))
    if 0 < task_index <= len(tasks):
        tasks[task_index - 1]["Status"] = "Completed"
        print(f"Task '{tasks[task_index - 1]['Name']}' successfully completed.")
    else:
        print("Invalid sequence number.")

def delete_task():
    global tasks, deleted_tasks
    task_index = int(input("Please enter the sequence number of the task to delete: "))
    if 0 < task_index <= len(tasks):
        deleted_tasks.append(tasks[task_index - 1])
        del tasks[task_index - 1]
        print(f"Task '{deleted_tasks[-1]['Name']}' successfully deleted. Sequence number: {task_index}")
    else:
        print("Invalid sequence number.")

def list_all_tasks():
    print("All Tasks:")
    for index, task in enumerate(tasks, start=1):
        print(f"{index} - {task['Name']} - {task['Status']}")

    if deleted_tasks:
        print("\nDeleted Tasks:")
        for task in deleted_tasks:
            print(f"{task['Name']} - Deleted")

while True:
    print("\nTask Manager Menu:")
    print("1. Add a New Task")
    print("2. Complete a Task")
    print("3. Delete a Task")
    print("4. List All Tasks")
    print("5. Exit")

    choice = input("Please enter one of the numbers above: ")
    if choice == "1":
        add_task()
    elif choice == "2":
        complete_task()
    elif choice == "3":
        delete_task()
    elif choice == "4":
        list_all_tasks()
    elif choice == "5":
        print("Exiting the program...")
        break
    else:
        print("Invalid choice, please try again.")
